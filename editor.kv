Root:

    Widget:
        canvas:
            Rectangle:
                source: "wall.jpg"
                size: self.size
                pos: self.pos         
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: 30
            
            Button:
                text: 'Convert'
                on_release: root.show_convert()
           


<ConvertDialog>
    BoxLayout:
        size: root.size    
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: root.convert(filechooser.path, filechooser.selection)

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()
